<h1>My Team's Achievements</h1>
<hr/>

<ul class='list-group' style="text-align:center;">
  <% @achievements.each do |a| %>
    <div class="achievement">
      <li class='list-group-item active'><a href="#description" class="btn btn-link" data-toggle="collapse" style="color:white;text-decoration:none;">
        <strong>
          <%= a.name %> | <%= a.headline %> | <%= a.date %><a>
        </strong>
      </li>
      <div class="collapse" id="description">
        <li class='list-group-item'><%= a.description %></li>
      </div>
    </div>
    <br>
  <% end %>

<%= link_to 'Add Achievement', new_achievement_path %>
