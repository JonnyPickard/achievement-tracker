<%= form_for @achievement do |f| %>
<div class='container' style="text-align:center;">
  <div class='form-group'>
    <%= f.label :name %>
    <br />
    <%= f.text_field :name%>
  </div>

  <div class='form-group'>
    <%= f.label :team %>
    <br />
    <%= f.text_field :team%>
  </div>

  <div class='form-group'>
    <%= f.label :headline %>
    <br />
    <%= f.text_field :headline%>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description%>
  </div>

  <div class='form-group'>
    <%= f.label :categories %>
    <br />
    <%= f.text_field :categories%>
  </div>

  <div class='form-group'>
    <%= f.label :date %>
    <br />
    <%= f.date_field :date%>
  </div>

  <div class='form-group'>
    <%= f.submit "Submit Achievement"%>
  </div>

  <% end %>
</div>
