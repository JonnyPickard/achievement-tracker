<h1> Add your achievement </h1>
<hr/>

<%= bootstrap_form_for @achievement do |f| %>
<div class='container' style="text-align:center;">
  <div class='form-group'>
    <%= f.text_field :name%>
  </div>

  <div class='form-group'>
    <%= f.text_field :team%>
  </div>

  <div class='form-group'>
    <%= f.text_field :headline, label: "Summary" %>
  </div>

  <div class='form-group'>
    <%= f.text_area :description%>
  </div>

  <div class='form-group'>
    <%= f.text_field :categories%>
  </div>

  <div class='form-group'>
    <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d')%>
  </div>

  <div class='form-group'>
    <%= f.submit "Submit Achievement"%>
  </div>

  <% end %>
</div>
